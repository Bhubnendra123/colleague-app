                    android:id="@+id/mobile_number"
                    />

                <!-- Separator line -->
                <View style="@style/separatorLineThin3"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
